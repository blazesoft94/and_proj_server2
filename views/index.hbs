{{> head}}
<!-- login -->
<div class="finder">
	<h1 class="title">Find Restaurants</h1>
	<!-- <h2 class="sub-head-w3-agileits">you can design your own cake, exactly as you would like it!</h2> -->
	<div class="container text-white">
		<form action="show" method = "post">
		<div class="row">
			<div class="col-md-6">
				<div class="row row-item row-item-odd">
					<label for="people">People: <span id="people-span">1</span></label>
					<input name="people" type="range" min="1" max="20" value="1" step="1" class="slider" id="people-slider">
					
				</div>
			</div>
			<div class="col-md-6">
					<div class="row row-item row-item-even slidecontainer">	
						<label for="budget">Total Budget: <span id="budget-span">500</span></label>
						<!-- <input name="budget" type="number" min="200" max="20000" step="50" class="form-control" placeholder="Enter your total budget"> -->
						<input name="budget" type="range" min="200" max="1500" value="500" step="50" class="slider" id="budget-slider">
						
						<!-- <input name="people" type="number" min="1" max="20" class="form-control" placeholder="20 People Max"> -->
					</div>
			</div>
			
		</div>	
		<div class="row mt-2">
			<div class="col-md-6">
				<div class="row row-item row-item-odd">
					<label for="cat">Choose a category</label>
					<select name="cat" id="cat">
						<option value="All" selected>All</option>
						<option value="FastFood">Fast Food</option>
						<option value="Pasta">Pasta</option>
						<option value="Pizza">Pizza</option>
						<option value="Sandwich">Sandwich</option>
						<option value="Pakistani">Pakistani</option>
						<option value="Chinese">Chinese</option>
						<option value="Soup">Soup</option>
						<option value="Bakery">Bakery</option>
						<option value="Steak">Steak</option>
						<option value="Bbq">Bbq</option>
					</select>
				</div>
			</div>
		</div>
			
		<div class="row row-submit mt-2">
			<div class="col-md-4">
				<input type="submit" value="Find!" class="" />
			</div>
		</div>
		</form>
	</div>	
	<script src="js/home.js" type="text/javascript"></script>
</div>	
{{> footer}}